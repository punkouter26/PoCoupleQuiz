    </div>

    <div class="container">
        @if (_isLoading)
        {
            <SkeletonLoader Type="leaderboard" />
        }
        else
        {
            @if (!_players.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">ðŸŽ®</div>
                    <h4>No Players Yet!</h4>
                    <p>Be the first to play and claim the crown!</p>
                    <button class="btn-empty-state" @onclick="@(() => NavigationManager.NavigateTo("/"))">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polygon points="5 3 19 12 5 21 5 3" />
                        </svg>
                        Start Playing
                    </button>
                </div>
            }
            else
            {
                <div class="leaderboard-list">
                    @{
                        var rank = 1;
                        foreach (var player in _players)
                        {
                            var rankClass = rank <= 3 ? $"rank-{rank}" : "rank-other";
                            <div class="leaderboard-card @rankClass state-transition" style="animation-delay: @(rank * 0.05)s">
                                <div class="rank-section">
                                    <span class="rank-badge">@GetRankDisplay(rank)</span>
                                </div>
                                <div class="player-section">
                                    <span class="player-name">@player.Name</span>
                                    <span class="player-meta">Last played @GetTimeAgo(player.LastPlayed)</span>
                                </div>
                                <div class="stats-section">
                                    <div class="stat">
                                        <span class="stat-value">@player.CorrectPercentage.ToString("F0")%</span>
                                        <span class="stat-label">Accuracy</span>
                                    </div>
                                    <div class="stat">
                                        <span class="stat-value">@player.CorrectAnswers</span>
                                        <span class="stat-label">Correct</span>
                                    </div>
                                    <div class="stat">
                                        <span class="stat-value">@player.TotalQuestionsAnswered</span>
                                        <span class="stat-label">Total</span>
                                    </div>
                                </div>
                                @if (rank <= 3)
                                {
                                    <div class="trophy-badge">@GetTrophyEmoji(rank)</div>
                                }
                            </div>
                            rank++;
                        }
                    }
                </div>
            }
        }
    </div>

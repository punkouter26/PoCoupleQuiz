@* ScoreboardDisplay.razor *@
@inject IJSRuntime JSRuntime

@if (Scoreboard != null && Scoreboard.Any())
{
    var maxScore = Scoreboard.Values.Max();
    var rankedScores = Scoreboard.OrderByDescending(s => s.Value).Select((s, idx) => new { Entry = s, Rank = idx + 1 }).ToList();
    
    <div class="scoreboard-display state-transition">
        <h4 class="scoreboard-header">üèÜ Scoreboard</h4>
        @foreach (var item in rankedScores)
        {
            var isUpdated = IsScoreUpdated(item.Entry.Key);
            var pointsGained = GetPointsGained(item.Entry.Key);
            var progressPercent = maxScore > 0 ? (item.Entry.Value * 100.0 / maxScore) : 0;
            
            <div class="scoreboard-item @(isUpdated ? "score-updated" : "")">
                <div class="rank-badge rank-@item.Rank">
                    @GetRankEmoji(item.Rank)
                </div>
                <div class="player-info">
                    <span class="player-name">@item.Entry.Key</span>
                    <div class="progress-bar-container">
                        <div class="progress-bar-fill" style="width: @progressPercent%"></div>
                    </div>
                </div>
                <div class="score-section">
                    <span class="player-score" data-score="@item.Entry.Value">@item.Entry.Value</span>
                    @if (pointsGained > 0)
                    {
                        <span class="points-gained">+@pointsGained</span>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="no-scores">No scores yet - let's play!</p>
}

<style>
    .scoreboard-display {
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(99, 102, 241, 0.1);
    }
    
    .scoreboard-header {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1e1b4b;
        margin-bottom: 1.25rem;
        text-align: center;
    }
    
    .scoreboard-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.875rem 1rem;
        background: white;
        border-radius: 12px;
        margin-bottom: 0.75rem;
        transition: all 0.3s ease;
        border: 1px solid #e5e7eb;
    }
    
    .scoreboard-item:hover {
        transform: translateX(4px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.15);
    }
    
    .scoreboard-item.score-updated {
        animation: scoreIncrease 0.6s ease-out;
        border-color: #10b981;
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    }
    
    @@keyframes scoreIncrease {
        0% { transform: scale(1); }
        50% { transform: scale(1.03); background: #d1fae5; }
        100% { transform: scale(1); }
    }
    
    .rank-badge {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        border-radius: 50%;
        flex-shrink: 0;
    }
    
    .rank-1 { background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); }
    .rank-2 { background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%); }
    .rank-3 { background: linear-gradient(135deg, #fed7aa 0%, #fdba74 100%); }
    
    .player-info {
        flex-grow: 1;
        min-width: 0;
    }
    
    .player-name {
        font-weight: 600;
        color: #1e1b4b;
        display: block;
        margin-bottom: 0.25rem;
    }
    
    .progress-bar-container {
        height: 6px;
        background: #e5e7eb;
        border-radius: 3px;
        overflow: hidden;
    }
    
    .progress-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 3px;
        transition: width 0.5s ease-out;
    }
    
    .score-section {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.125rem;
    }
    
    .player-score {
        font-size: 1.25rem;
        font-weight: 700;
        color: #6366f1;
    }
    
    .points-gained {
        font-size: 0.75rem;
        font-weight: 700;
        color: #10b981;
        animation: fadeSlide 0.5s ease-out;
    }
    
    .no-scores {
        text-align: center;
        color: #9ca3af;
        font-style: italic;
        padding: 1rem;
    }
</style>

@code {
    [Parameter]
    public Dictionary<string, int> Scoreboard { get; set; } = new Dictionary<string, int>();
    
    [Parameter]
    public Dictionary<string, int> PreviousScoreboard { get; set; } = new Dictionary<string, int>();
    
    private bool IsScoreUpdated(string playerName)
    {
        if (!PreviousScoreboard.ContainsKey(playerName))
            return false;
            
        if (!Scoreboard.ContainsKey(playerName))
            return false;
            
        return Scoreboard[playerName] > PreviousScoreboard[playerName];
    }
    
    private int GetPointsGained(string playerName)
    {
        if (!PreviousScoreboard.ContainsKey(playerName) || !Scoreboard.ContainsKey(playerName))
            return 0;
        return Math.Max(0, Scoreboard[playerName] - PreviousScoreboard[playerName]);
    }
    
    private string GetRankEmoji(int rank) => rank switch
    {
        1 => "ü•á",
        2 => "ü•à",
        3 => "ü•â",
        _ => rank.ToString()
    };
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender && Scoreboard != null)
        {
            foreach (var player in Scoreboard)
            {
                if (IsScoreUpdated(player.Key))
                {
                    // Trigger haptic feedback on mobile for score increase
                    try
                    {
                        await JSRuntime.InvokeVoidAsync("triggerSuccessHaptic");
                    }
                    catch (Exception)
                    {
                        // Silently fail if JS interop not available
                    }
                    break; // Only vibrate once per render
                }
            }
        }
    }
}

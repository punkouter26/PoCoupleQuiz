@* Icon Component - Replaces emojis with modern SVG icons *@

@switch (Name)
{
    case "home":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
            <polyline points="9 22 9 12 15 12 15 22" />
        </svg>
        break;
    
    case "leaderboard":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="12 3 20 7.5 20 16.5 12 21 4 16.5 4 7.5 12 3" />
            <polyline points="12 12 20 7.5" />
            <polyline points="12 12 12 21" />
            <polyline points="12 12 4 7.5" />
        </svg>
        break;
    
    case "heart":
        <svg class="icon" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="1">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
        </svg>
        break;
    
    case "crown":
        <svg class="icon" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="1">
            <path d="M6 3h12l2 4-2 3h4l-7 9-7-9h4l-2-3 2-4z" />
        </svg>
        break;
    
    case "trophy":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 6 5 18 5 18 9" />
            <path d="M4 9h16v7a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V9z" />
            <path d="M10 14h4" />
            <path d="M12 20v-4" />
        </svg>
        break;
    
    case "dice":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
            <path d="M9 9h.01M9 15h.01M15 9h.01M15 15h.01" />
        </svg>
        break;
    
    case "check":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12" />
        </svg>
        break;
    
    case "alert":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3.05h16.94a2 2 0 0 0 1.71-3.05L13.71 3.86a2 2 0 0 0-3.42 0z" />
            <line x1="12" y1="9" x2="12" y2="13" />
            <line x1="12" y1="17" x2="12.01" y2="17" />
        </svg>
        break;
    
    case "info":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" />
            <line x1="12" y1="16" x2="12" y2="12" />
            <line x1="12" y1="8" x2="12.01" y2="8" />
        </svg>
        break;
    
    case "search":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8" />
            <path d="m21 21-4.35-4.35" />
        </svg>
        break;
    
    case "settings":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="3" />
            <path d="M12 1v6m0 6v6M4.22 4.22l4.24 4.24m5.08 5.08l4.24 4.24M1 12h6m6 0h6M4.22 19.78l4.24-4.24m5.08-5.08l4.24-4.24" />
        </svg>
        break;
    
    case "loading":
        <svg class="icon animate-spin" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" stroke="none" stroke-dasharray="62.83" stroke-dashoffset="62.83" />
        </svg>
        break;
    
    case "arrow-right":
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12" />
            <polyline points="12 5 19 12 12 19" />
        </svg>
        break;
    
    default:
        <span class="icon-text">@Name</span>
        break;
}

<style>
    .icon {
        display: inline-block;
        width: 1em;
        height: 1em;
        vertical-align: -0.125em;
        color: inherit;
        fill: currentColor;
        overflow: visible;
    }
    
    .icon-text {
        color: inherit;
        font-size: inherit;
    }
    
    .animate-spin {
        animation: spin 1s linear infinite;
    }
    
    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>

@code {
    [Parameter]
    public string Name { get; set; } = string.Empty;
    
    [Parameter]
    public string Class { get; set; } = string.Empty;
    
    [Parameter]
    public string Size { get; set; } = "1em";
}

@using PoCoupleQuiz.Core.Models

<div class="question-container">
    <h4 class="question-text">@QuestionText</h4>
    
    @if (!ShowResults)
    {
        <div class="@(IsKingPlayer ? "king-interface" : "player-interface")">
            @if (IsKingPlayer)
            {
                <h5>ðŸ‘‘ @CurrentPlayerName's Turn (King Player)</h5>
                <p>Answer the question about yourself:</p>
            }
            else
            {
                <h5>ðŸŽ¯ @CurrentPlayerName's Turn</h5>
                <p>What do you think @KingPlayerName would answer?</p>
            }
            
            <div class="answer-input-section">
                <RadzenTextArea @bind-Value="Answer" 
                               @oninput="@OnAnswerInput"
                               Placeholder="@(IsKingPlayer ? "Your answer..." : "Your guess...")" 
                               Rows="3" 
                               Style="width: 100%; margin-bottom: 1rem;" />
            </div>
            
            <RadzenButton Click="OnSubmit" 
                         Text="@(IsKingPlayer ? "Submit Answer" : "Submit Guess")" 
                         ButtonStyle="ButtonStyle.Primary" 
                         Disabled="@string.IsNullOrWhiteSpace(Answer)" />
        </div>
        
        @if (!IsKingPlayer)
        {
            <div class="mt-3">
                <small class="text-muted">
                    Player @(CurrentGuessingPlayerIndex + 1) of @TotalGuessingPlayers guessing players
                </small>
            </div>
        }
    }
</div>

<style>
    .question-container {
        width: 100%;
        animation: fadeSlide 0.3s ease-out;
    }
    
    .question-text {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 30px;
        padding: 24px 28px;
        background: linear-gradient(135deg, #f0f4ff 0%, #e8f4fd 50%, #fdf4ff 100%);
        border-radius: 16px;
        border-left: 5px solid;
        border-image: linear-gradient(180deg, #667eea 0%, #764ba2 100%) 1;
        text-align: center;
        position: relative;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.15);
    }
    
    .question-text::before {
        content: '"';
        position: absolute;
        top: 10px;
        left: 15px;
        font-size: 3rem;
        color: rgba(102, 126, 234, 0.2);
        font-family: Georgia, serif;
        line-height: 1;
    }
    
    .question-text::after {
        content: '"';
        position: absolute;
        bottom: 0;
        right: 15px;
        font-size: 3rem;
        color: rgba(102, 126, 234, 0.2);
        font-family: Georgia, serif;
        line-height: 1;
    }
    
    /* Gradient text effect for question */
    .question-text {
        background-clip: text;
        -webkit-background-clip: initial;
        color: #4338ca;
    }
    
    .king-interface, .player-interface {
        padding: 25px;
        border-radius: 16px;
        background: #ffffff;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
    }
    
    .king-interface {
        border: 2px solid #f59e0b;
        background: linear-gradient(135deg, #fffbeb 0%, #ffffff 100%);
    }
    
    .player-interface {
        border: 2px solid #6366f1;
        background: linear-gradient(135deg, #eef2ff 0%, #ffffff 100%);
    }
    
    .king-interface h5,
    .player-interface h5 {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 12px;
        color: #1e1b4b;
    }
    
    .king-interface p,
    .player-interface p {
        color: #6b7280;
        margin-bottom: 20px;
        font-size: 1.05rem;
    }
    
    /* Answer input section */
    .answer-input-section {
        margin-bottom: 1rem;
    }
    
    @@media (max-width: 768px) {
        .question-text {
            font-size: 1.3rem;
            padding: 20px;
        }
        
        .question-text::before,
        .question-text::after {
            font-size: 2rem;
        }
    }
</style>

@code {
    [Parameter] public string QuestionText { get; set; } = "";
    [Parameter] public string CurrentPlayerName { get; set; } = "";
    [Parameter] public string KingPlayerName { get; set; } = "";
    [Parameter] public bool IsKingPlayer { get; set; }
    [Parameter] public bool ShowResults { get; set; }
    [Parameter] public int CurrentGuessingPlayerIndex { get; set; }
    [Parameter] public int TotalGuessingPlayers { get; set; }
    [Parameter] public string Answer { get; set; } = "";
    [Parameter] public EventCallback<string> AnswerChanged { get; set; }
    [Parameter] public EventCallback<ChangeEventArgs> OnAnswerInput { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }
}

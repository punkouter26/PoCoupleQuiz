@using PoCoupleQuiz.Core.Models

<div class="question-container">
    <h4 class="question-text">@QuestionText</h4>
    
    @if (!ShowResults)
    {
        <div class="@(IsKingPlayer ? "king-interface" : "player-interface")">
            @if (IsKingPlayer)
            {
                <h5>ðŸ‘‘ @CurrentPlayerName's Turn (King Player)</h5>
                <p>Answer the question about yourself:</p>
            }
            else
            {
                <h5>ðŸŽ¯ @CurrentPlayerName's Turn</h5>
                <p>What do you think @KingPlayerName would answer?</p>
            }
            
            <div class="answer-input-section">
                <RadzenTextArea @bind-Value="Answer" 
                               @oninput="@OnAnswerInput"
                               Placeholder="@(IsKingPlayer ? "Your answer..." : "Your guess...")" 
                               Rows="3" 
                               Style="width: 100%; margin-bottom: 1rem;" />
            </div>
            
            <RadzenButton Click="OnSubmit" 
                         Text="@(IsKingPlayer ? "Submit Answer" : "Submit Guess")" 
                         ButtonStyle="ButtonStyle.Primary" 
                         Disabled="@(string.IsNullOrWhiteSpace(Answer) || Answer.Trim().Length < 3)" />
        </div>
        
        @if (!IsKingPlayer)
        {
            <div class="mt-3">
                <small class="text-muted">
                    Player @(CurrentGuessingPlayerIndex + 1) of @TotalGuessingPlayers guessing players
                </small>
            </div>
        }
    }
</div>

<style>
    .question-container {
        width: 100%;
        animation: fadeSlide var(--transition-base) ease-out;
    }
    
    .question-text {
        font-size: var(--font-size-2xl);
        font-weight: var(--font-weight-bold);
        margin-bottom: var(--space-8);
        padding: var(--space-6);
        background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-accent-50) 100%);
        border-radius: var(--radius-lg);
        border-left: 4px solid var(--color-primary-600);
        text-align: center;
        position: relative;
        box-shadow: var(--shadow-md);
        color: var(--color-primary-700);
        line-height: var(--line-height-normal);
    }
    
    .question-text::before,
    .question-text::after {
        content: '"';
        position: absolute;
        font-size: var(--font-size-4xl);
        color: rgba(139, 92, 246, 0.15);
        font-family: Georgia, serif;
        line-height: 1;
    }

    .question-text::before {
        top: var(--space-2);
        left: var(--space-3);
    }

    .question-text::after {
        bottom: var(--space-2);
        right: var(--space-3);
    }
    
    .king-interface, 
    .player-interface {
        padding: var(--space-6);
        border-radius: var(--radius-lg);
        background: var(--surface);
        box-shadow: var(--shadow-lg);
        transition: all var(--transition-base);
        border: 2px solid var(--color-neutral-200);
    }

    .king-interface:hover,
    .player-interface:hover {
        box-shadow: var(--shadow-xl);
        border-color: var(--color-primary-300);
    }

    .king-interface h5,
    .player-interface h5 {
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-bold);
        color: var(--color-neutral-900);
        margin-bottom: var(--space-2);
        display: flex;
        align-items: center;
        gap: var(--space-2);
    }

    .king-interface p,
    .player-interface p {
        color: var(--color-neutral-600);
        font-size: var(--font-size-base);
        margin-bottom: var(--space-4);
    }
    
    .answer-input-section {
        margin-bottom: var(--space-4);
    }

    :deep(.rz-textarea) {
        width: 100% !important;
        padding: var(--space-3) var(--space-4) !important;
        border: 2px solid var(--color-neutral-300) !important;
        border-radius: var(--radius-md) !important;
        font-family: inherit !important;
        font-size: var(--font-size-base) !important;
        transition: all var(--transition-base) !important;
        background-color: #ffffff !important;
        color: var(--color-neutral-900) !important;
    }

    :deep(.rz-textarea:hover) {
        border-color: var(--color-primary-400) !important;
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.05) !important;
    }

    :deep(.rz-textarea:focus) {
        outline: none !important;
        border-color: var(--color-primary-600) !important;
        box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1) !important;
    }

    @@keyframes fadeSlide {
        from {
            opacity: 0;
            transform: translateX(-10px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@media (max-width: 768px) {
        .question-text {
            font-size: var(--font-size-xl);
            padding: var(--space-4);
            margin-bottom: var(--space-6);
        }

        .king-interface,
        .player-interface {
            padding: var(--space-4);
        }

        .king-interface h5,
        .player-interface h5 {
            font-size: var(--font-size-base);
        }
    }
</style>
    
    .king-interface {
        border: 2px solid #f59e0b;
        background: linear-gradient(135deg, #fffbeb 0%, #ffffff 100%);
    }
    
    .player-interface {
        border: 2px solid #6366f1;
        background: linear-gradient(135deg, #eef2ff 0%, #ffffff 100%);
    }
    
    .king-interface h5,
    .player-interface h5 {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 12px;
        color: #1e1b4b;
    }
    
    .king-interface p,
    .player-interface p {
        color: #6b7280;
        margin-bottom: 20px;
        font-size: 1.05rem;
    }
    
    /* Answer input section */
    .answer-input-section {
        margin-bottom: 1rem;
    }
    
    @@media (max-width: 768px) {
        .question-text {
            font-size: 1.3rem;
            padding: 20px;
        }
        
        .question-text::before,
        .question-text::after {
            font-size: 2rem;
        }
    }

@code {
    [Parameter] public string QuestionText { get; set; } = "";
    [Parameter] public string CurrentPlayerName { get; set; } = "";
    [Parameter] public string KingPlayerName { get; set; } = "";
    [Parameter] public bool IsKingPlayer { get; set; }
    [Parameter] public bool ShowResults { get; set; }
    [Parameter] public int CurrentGuessingPlayerIndex { get; set; }
    [Parameter] public int TotalGuessingPlayers { get; set; }
    [Parameter] public string Answer { get; set; } = "";
    [Parameter] public EventCallback<string> AnswerChanged { get; set; }
    [Parameter] public EventCallback<ChangeEventArgs> OnAnswerInput { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }
}

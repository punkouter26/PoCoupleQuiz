@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudPopoverProvider /> @* Adding this line to fix the MudBlazor provider issue *@

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false" Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">PoCoupleQuiz</MudText>
        <MudSpacer />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

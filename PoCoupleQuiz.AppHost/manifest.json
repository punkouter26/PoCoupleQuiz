{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "storage": {
      "type": "azure.bicep.v0",
      "path": "storage.module.bicep"
    },
    "tables": {
      "type": "value.v0",
      "connectionString": "{storage.outputs.tableEndpoint}"
    },
    "openAiEndpoint": {
      "type": "parameter.v0",
      "value": "{openAiEndpoint.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "openAiKey": {
      "type": "parameter.v0",
      "value": "{openAiKey.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "openAiDeployment": {
      "type": "parameter.v0",
      "value": "{openAiDeployment.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "server": {
      "type": "project.v0",
      "path": "../PoCoupleQuiz.Server/PoCoupleQuiz.Server.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{server.bindings.http.targetPort}",
        "ConnectionStrings__tables": "{tables.connectionString}",
        "TABLES_URI": "{storage.outputs.tableEndpoint}",
        "AzureOpenAI__Endpoint": "{openAiEndpoint.value}",
        "AzureOpenAI__Key": "{openAiKey.value}",
        "AzureOpenAI__DeploymentName": "{openAiDeployment.value}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "storage-roles": {
      "type": "azure.bicep.v0",
      "path": "storage-roles.module.bicep",
      "params": {
        "storage_outputs_name": "{storage.outputs.name}",
        "principalType": "",
        "principalId": ""
      }
    }
  }
}